{
	"info": {
		"name": "Cabinet Comptable Al Amane API",
		"description": "Collection pour tester l'API de gestion documentaire",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login Société",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"societe@test.ma\",\n    \"motDePasse\": \"password\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					}
				},
				{
					"name": "Login Comptable",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"comptable@alamane.ma\",\n    \"motDePasse\": \"password\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					}
				}
			]
		},
		{
			"name": "Documents - Société",
			"item": [
				{
					"name": "Upload Document",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "numeroPiece",
									"value": "FAC001",
									"type": "text"
								},
								{
									"key": "type",
									"value": "FACTURE_ACHAT",
									"type": "text"
								},
								{
									"key": "categorieComptable",
									"value": "Achats",
									"type": "text"
								},
								{
									"key": "datePiece",
									"value": "2024-01-15",
									"type": "text"
								},
								{
									"key": "montant",
									"value": "1500.00",
									"type": "text"
								},
								{
									"key": "fournisseur",
									"value": "Fournisseur Test",
									"type": "text"
								},
								{
									"key": "file",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/api/documents/upload",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"documents",
								"upload"
							]
						}
					}
				},
				{
					"name": "Get My Documents",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/documents/my-documents",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"documents",
								"my-documents"
							]
						}
					}
				}
			]
		},
		{
			"name": "Documents - Comptable",
			"item": [
				{
					"name": "Get Pending Documents",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/documents/pending",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"documents",
								"pending"
							]
						}
					}
				},
				{
					"name": "Validate Document",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"commentaire\": \"Document validé - conforme\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/documents/validate/1",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"documents",
								"validate",
								"1"
							]
						}
					}
				},
				{
					"name": "Reject Document",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"motif\": \"Document illisible - merci de renvoyer\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/documents/reject/1",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"documents",
								"reject",
								"1"
							]
						}
					}
				}
			]
		}
	]
}